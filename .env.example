# PostgreSQL database connection string
# For local dev: "postgresql://user:password@localhost:5432/your_db"
# For Render:     use the full DATABASE_URL from your Render dashboard
DATABASE_URL=postgresql://username:password@host:port/dbname

# Secret key used to sign JWT tokens (any long random string)
JWT_SECRET=your_jwt_secret_here

# Gmail address used to send verification emails
EMAIL_USER=your_email@gmail.com

# Gmail App Password (generated from your Google Account)
EMAIL_PASS=your_app_password_here

# Frontend base URL (change to Vercel domain when deployed)
CLIENT_URL=http://localhost:5173

# Backend base URL (change to Render domain when deployed)
SERVER_URL=http://localhost:5000

# Set to 'development' or 'production'
NODE_ENV=development
